# 彩票预测系统定时任务
# 彩票类型: {{LOTTERY_TYPE}}

# 设置环境变量
SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

# 每天指定时间执行每日任务
0 {{CRON_HOUR}} * * * cd /app && /usr/local/bin/python scripts/daily_task.py >> /var/log/cron.log 2>&1

# 每周日 23:00 清理旧日志（保留最近30天）
0 23 * * 0 find /app/logs -name "*.log" -mtime +30 -delete >> /var/log/cron.log 2>&1

